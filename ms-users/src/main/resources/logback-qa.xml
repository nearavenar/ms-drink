<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[QA] %d{yyyy-MM-dd HH:mm:ss} %-5p [%c{1}] - %msg%n"/>
        </Console>
        <File name="QAFile" fileName="logs/qa-app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p [%c{1}] - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="QAFile"/>
        </Root>
    </Loggers>
</Configuration>
